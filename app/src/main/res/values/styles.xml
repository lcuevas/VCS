<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>





    <style name="AppBaseTheme.LC" parent="AppBaseTheme" >
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:actionMenuTextColor">@color/gris</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:panelColorForeground">@color/white</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>


    </style>

    <style name="Texto.negro" parent="AppBaseTheme" >
        <item name="android:textColor">@color/gris</item>
        <item name="android:itemTextAppearance">@style/AppBaseTheme</item>
        <item name="android:actionMenuTextColor">@color/gris</item>



    </style>






</resources>
